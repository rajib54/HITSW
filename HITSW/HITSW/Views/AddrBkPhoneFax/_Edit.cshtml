@model AddrBk_PhoneFax

@{
    ViewBag.Title = "Create";
}

<h2>@ViewBag.MainTitle</h2>

<script type="text/javascript">
    $(document).ready(function () {
        $('#addrbk_phonefax_edit_effdt').datepicker({
            dateFormat: 'yy-mm-dd'
        });

        $('#addrbk_phonefax_edit_ineffdt').datepicker({
            dateFormat: 'yy-mm-dd'
        });

        $('#addrbk_phonefax_edit_form').submit(ajaxFormSubmit);
    });
</script>


@using (Html.BeginForm("Edit", "AddrBkPhoneFax", FormMethod.Post, new { id = "addrbk_phonefax_edit_form", data_hitsoft_target = "#addrbk_organization_details_content" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <input type="hidden" name="isOrganization" value="@ViewBag.isOrganization" />
    <input type="hidden" name="orgName" value="@ViewBag.orgName" />
    <input type="hidden" name="organizationId" value="@ViewBag.organizationId" />
    
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Concurrency)
    @Html.HiddenFor(model => model.ContactBasis_LCID)
    @Html.HiddenFor(model => model.ActiveRec)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.CreatedDt)
    @Html.HiddenFor(model => model.LastUpdatedFrom)
    @Html.HiddenFor(model => model.OrgID)
    @Html.HiddenFor(model => model.IndivID)
    @Html.HiddenFor(model => model.FacilityID)
    @Html.HiddenFor(model => model.LastUpdatedBy)

    <table class="table table-striped">
        <tr>
            <td>Type *</td>
            <td>
                @Html.DropDownList("PhoneFaxType_LCID", String.Empty)
                @Html.ValidationMessageFor(model => model.PhoneFaxType_LCID)
            </td>
        </tr>

        <tr>
            <td>Area Code *</td>
            <td>
                @Html.EditorFor(model => model.AreaCode)
                @Html.ValidationMessageFor(model => model.AreaCode)
            </td>
        </tr>

        <tr>
            <td>Phone/Fax Number *</td>
            <td>
                @Html.EditorFor(model => model.PhoneFaxNum)
                @Html.ValidationMessageFor(model => model.PhoneFaxNum)
            </td>
        </tr>

        <tr>
            <td>Country Code</td>
            <td>
                @Html.EditorFor(model => model.DialCntryCode)
                @Html.ValidationMessageFor(model => model.DialCntryCode)
            </td>
        </tr>

        <tr>
            <td>City Code</td>
            <td>
                @Html.EditorFor(model => model.DialCityCode)
                @Html.ValidationMessageFor(model => model.DialCityCode)
            </td>
        </tr>

        <tr>
            <td>@Html.LabelFor(model => model.PreferPhoneSeq)</td>
            <td>
                @Html.EditorFor(model => model.PreferPhoneSeq)
                @Html.ValidationMessageFor(model => model.PreferPhoneSeq)
            </td>
        </tr>

        <tr>
            <td>Effective Date *</td>
            <td>
                @Html.TextBoxFor(model => model.EffDt, new { id = "addrbk_phonefax_edit_effdt" })
                @Html.ValidationMessageFor(model => model.EffDt)
            </td>
        </tr>

        <tr>
            <td>Ineffective Date</td>
            <td>
                @Html.TextBoxFor(model => model.IneffDt, new { id = "addrbk_phonefax_edit_ineffdt" })
                @Html.ValidationMessageFor(model => model.IneffDt)
            </td>
        </tr>

        <tr>
            <td>Comments</td>
            <td>
                @Html.EditorFor(model => model.Cmmt)
                @Html.ValidationMessageFor(model => model.Cmmt)
            </td>
        </tr>

        <tr>
            <td style="text-align:right"><a class="btn btn-info" href="#" onclick="fillMenu('@Url.Action("Index", "AddrBkPhoneFax", new { isOrganization = ViewBag.isOrganization, orgName = ViewBag.orgName, organizationId = ViewBag.organizationId })','#addrbk_organization_details_content')">Cancel</a></td>
            <td style="text-align:left"><input type="submit" value="Update" class="btn btn-success"/></td>
        </tr>
    </table>
}