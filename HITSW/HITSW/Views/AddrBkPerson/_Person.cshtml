@model IPagedList<AddrBk_Person>

<div id="addrbk_organization_index_div">
    <table class="table table-striped">
    <tr>
        <th></th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>Job Title</th>
        <th>Maritial Status</th>
        <th>Race</th>
        <th>Ethnicity</th>
        <th>Religious Background</th>
        <th>Education Level</th>
        <th>Occupation</th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                <div class="btn-group">
                    <a href="@Url.Action("Details", new { id=item.Id })" class="btn"><i class="icon-list-alt" title="details"></i></a>
                    <a href="@Url.Action("Edit", new { id=item.Id })" class="btn"><i class="icon-edit" title="edit"></i></a>
                    <a href="#" class="btn" data-hitsoft-target="#addrbk_organization_index_div" data-hitsoft-url="@Url.Action("Delete", new { id=item.Id })" onclick="confirmDelete(this)"><i class="icon-remove" title="delete"></i></a>
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lookup_Gender.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lookup_MaritalStatus.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lookup_Race.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lookup_Ethnicity.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lookup_AddrBk.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lookup_EducationalLevel.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lookup_Occupation.Title)
            </td>
        </tr>
    }
    </table>

    <div class="pagedList" data-hitsoft-target="#addrbk_organization_index_div">
        @Html.PagedListPager(Model, page => @Url.Action("Index", new { page,searchTerm=ViewBag.searchTerm}))
    </div>
</div>