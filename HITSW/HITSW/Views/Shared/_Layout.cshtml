<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/jquery")

      <div class="navbar navbar-inverse navbar-fixed-top">
          <div class="navbar-inner">
              <div class="container">
                  <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
                  <div class="nav-collapse collapse">
                      <section id="login" class="navbar-text pull-right">
                          @Html.Partial("_LoginPartial")
                      </section>
                      <ul class="nav">
                          <li>@Html.ActionLink("Home", "Index", "Home")</li>
                          <li>@Html.ActionLink("About", "About", "Home")</li>
                          <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                          <li class="dropdown">
                            <a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="/page.html">Address Book<b class="caret"></b></a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <li>@Html.ActionLink("Organization", "Index", "AddrBkOrganizationUnit")</li>
                                <li>@Html.ActionLink("Person", "Index", "AddrBkPerson")</li>
                                <li>@Html.ActionLink("Geographical Group", "Index", "AddrBkGeographicalGroup")</li>
                            </ul>
                          </li>
                          <li>@Html.ActionLink("DataTables", "Index", "DataTables")</li>
                      </ul>
                  </div>
              </div>
          </div>
      </div>
      <div class="container-fluid">
        <div class="row-fluid">
            <div id="body">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
             </div>
         </div>
      </div>
        @RenderSection("scripts", required: false)
    </body>
</html>