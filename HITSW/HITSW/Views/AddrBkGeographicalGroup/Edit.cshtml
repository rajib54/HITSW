@model HITSW.Models.AddrBk_GeographicalGroup

<h2>@ViewBag.MainTitle</h2>

<script type="text/javascript">
    $(document).ready(function () {
        $('#addrbk_geographicalgroup_create_effdt').datepicker({
            dateFormat: 'yy-mm-dd'
        });

        $('#addrbk_geographicalgroup_create_ineffdt').datepicker({
            dateFormat: 'yy-mm-dd'
        });
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Concurrency)
    @Html.HiddenFor(model => model.ActiveRec)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.CreatedDt)
    @Html.HiddenFor(model => model.LastUpdatedFrom)
    @Html.HiddenFor(model => model.LastUpdatedBy)

    <table class="table table-striped">
         <tr>
            <td>Title *</td>
            <td>
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </td>
        </tr>

        <tr>
            <td>Type *</td>
            <td>
                @Html.DropDownList("GeoBasis_LCID", String.Empty)
                @Html.ValidationMessageFor(model => model.GeoBasis_LCID)
            </td>
        </tr>

        <tr>
            <td>Description</td>
            <td>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)   
            </td>
        </tr>

        <tr>
            <td>Effective Date *</td>
            <td>
                @Html.TextBoxFor(model => model.EffDt, new { id = "addrbk_geographicalgroup_create_effdt" })
                @Html.ValidationMessageFor(model => model.EffDt)
            </td>
        </tr>

        <tr>
            <td>Ineffective Date</td>
            <td>
                @Html.TextBoxFor(model => model.IneffDt, new { id = "addrbk_geographicalgroup_create_ineffdt" })
                @Html.ValidationMessageFor(model => model.IneffDt)
            </td>
        </tr>

        <tr>
            <td>Comments</td>
            <td>
                @Html.EditorFor(model => model.Cmmt)
                @Html.ValidationMessageFor(model => model.Cmmt)
            </td>
        </tr>

        <tr>
            <td style="text-align:right"><a href="@Url.Action("Index")" class="btn btn-info">cancel</a></td>
            <td style="text-align:left"><input type="submit" value="Update" class="btn btn-success"/></td>
        </tr>
    </table>
}